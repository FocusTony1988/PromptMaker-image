    <script>
        /* --- UTILITY FUNCTIONS --- */
        function highlight(text) {
            return `<span class="var-highlight">${text}</span>`;
        }

        function resetInput(id, updateFunc) {
            document.getElementById(id).value = '';
            window[updateFunc](); // Ruft die Update Funktion dynamisch auf
        }

        /* --- LOGIC FUNCTIONS --- */

        function updateClothes() {
            const val = document.getElementById('input-clothes').value || "[outfit]";
            const html = `Change the clothing of the person in the reference image to a ${highlight(val)}, maintain original pose and facial features.`;
            document.getElementById('code-clothes').innerHTML = html;
        }

        function updateAddObj() {
            const val = document.getElementById('input-add-obj').value || "[object]";
            const html = `Add a ${highlight(val)} into the scene, ensure realistic shadows, lighting match and seamless blending.`;
            document.getElementById('code-add-obj').innerHTML = html;
        }

        function updateStyle() {
            const select = document.getElementById('select-style');
            let val = select.value;
            const customGroup = document.getElementById('group-style-custom');
            const customInput = document.getElementById('input-style-custom');

            if(val === 'custom') {
                customGroup.style.display = 'block';
                val = customInput.value || "[custom style]";
            } else {
                customGroup.style.display = 'none';
            }
            
            const html = `Transform this image into ${highlight(val)}, keep the composition but change the visual rendering entirely.`;
            document.getElementById('code-style').innerHTML = html;
        }

        function updateCamera() {
            const val = document.getElementById('select-camera').value;
            const html = `Re-imagine the scene from a ${highlight(val)}, keeping the subject consistent but changing the viewpoint.`;
            document.getElementById('code-camera').innerHTML = html;
        }

        function updateLight() {
            const val = document.getElementById('select-light').value;
            const html = `Change the lighting to ${highlight(val)}, enhance shadows and atmosphere accordingly.`;
            document.getElementById('code-light').innerHTML = html;
        }

        function updateMaterial() {
            const obj = document.getElementById('input-mat-obj').value || "[object]";
            const select = document.getElementById('select-mat-type');
            const customInput = document.getElementById('input-mat-custom');
            
            let mat = select.value;
            
            if (mat === 'custom') {
                customInput.style.display = 'block';
                mat = customInput.value || "[custom material]";
            } else {
                customInput.style.display = 'none';
            }

            const html = `Change the material of ${highlight(obj)} to ${highlight(mat)}, maintain geometry but update reflections and texture.`;
            document.getElementById('code-material').innerHTML = html;
        }

        /* --- COPY FUNCTIONALITY --- */
        function copyPrompt(elementId, btn) {
            // Text ohne HTML Tags extrahieren
            const container = document.getElementById(elementId);
            const textToCopy = container.innerText;

            navigator.clipboard.writeText(textToCopy).then(() => {
                const originalContent = btn.innerHTML;
                
                // Success State
                btn.innerHTML = `‚úì Kopiert!`;
                btn.classList.add('success');
                
                // Reset timer
                setTimeout(() => {
                    btn.innerHTML = originalContent;
                    btn.classList.remove('success');
                }, 2000);
            });
        }
    </script>
</body>
</html>
